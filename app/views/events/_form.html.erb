<%= form_for(@event) do |f| %>
	<div>
		<% if @event.errors.any? %>
			<% @event.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		<% end %>
	</div>
	<div>
		<%= f.label :label %>
		<%= f.text_field :label %>
	</div>
	<div>
		<%= f.label :starting_date %>
		<%= f.date_field :starting_date %>
	</div>

	<div>
		<%= f.label :month_frequency %>
		<%= f.number_field :month_frequency, in:1.0..1000.0, step: 1 %>
	</div>

	<div>
		<%= f.label :day %>
		<%= f.select :day, (1..31) %>
	</div>


	<%= f.submit %>
<% end %>
