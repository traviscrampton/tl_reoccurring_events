<%= form_for(@event) do |f| %>
	<div>
		<%= f.label :label %>
		<%= f.text_field :label %>
	</div>
	<div>
		<%= f.label :starting_date %>
		<%= f.date_select(:starting_date, :order => [:month, :day, :year], end_year: 2050) %>
	</div>

	<div>
		<%= f.label :month_frequency %>
		<%= f.number_field :month_frequency, in:1.0..1000.0, step: 1 %>
	</div>

	<div>
		<%= f.label :day %>
		<%= f.select :day, (1..31) %>
	</div>


	<%= f.submit %>
<% end %>
